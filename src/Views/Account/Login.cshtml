@model LoginViewModel
@{
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section scripts {
	<partial name="_ValidationScriptsPartial" />
}
<section class="h-100">
	<div class="container h-100">
		<div class="row justify-content-sm-center h-100">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
				<div class="text-center my-3">&nbsp;</div>
				<div class="card shadow-lg mt-5">
					<div class="card-body p-5">
						<h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
						@if (!ViewData.ModelState.IsValid)
						{
							<div class="alert alert-danger alert-dismissible fade show" role="alert">
								@Html.ValidationSummary()
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						}
						@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", autocomplete = "off" }))
						{
							<div class="mb-3">
								<label class="mb-2 text-muted" for="email">Username/E-Mail Address</label>
								@Html.TextBoxFor(x => x.Username, new { @class = "form-control", required = "required", autofocus = "autofocus" })
								<div class="invalid-feedback">
									@Html.ValidationMessageFor(x => x.Username)
								</div>
							</div>

							<div class="mb-3">
								<div class="mb-2 w-100">
									<label class="text-muted" for="password">Password</label>
								</div>
								@Html.PasswordFor(x => x.Password, new { @class = "form-control", required = "required" })
								<div class="invalid-feedback">
									@Html.ValidationMessageFor(x => x.Password)
							    </div>
							</div>

							<div class="d-flex align-items-center">
								<div class="form-check">
									@Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-check-input" })
									<label for="remember" class="form-check-label">Remember Me</label>
								</div>
								<button type="submit" class="btn btn-primary ms-auto">
									Login
								</button>
							</div>
						}
					</div>
					<div class="card-footer py-3 border-0">
						<div class="text-center">
							Don't have an account? <a href="register.html" class="text-dark">Create One</a>
						</div>
					</div>
				</div>
				<div class="text-center mt-5 text-muted">
					Copyright &copy; 2022 all right reserved 
				</div>
			</div>
		</div>
	</div>
</section>