@model IEnumerable<AppointmentSchedule>
@{
    var counter = 0;
}
<div class="row">
    <div class="col">
        <h5>My Appointment Schedule</h5>
        <environment names="Development">
            <p>Use Swagger UI on this <a href="~/swagger" target="_blank">link</a> to do CRUD operation.</p>
        </environment>
        <environment names="Production">
            <a asp-controller="Appointment" asp-action="Create">Create new Schedule</a>
        </environment>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                </tr>
            </thead>
            <tbody>
                @if(!Model.Any())
                {
                    <tr>
                        <td colspan="6">
                            <div class="text-center">No data found</div>
                        </td>
                    </tr>    
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(++counter)</th>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.StartTime</td>
                        <td>@item.EndTime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>