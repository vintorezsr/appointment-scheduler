@model AppointmentSchedule
<div class="row">
    <div class="col-12">
        <h2>Create Page</h2>
        <form asp-controller="Appointment" asp-action="Create" class="needs-validation" autocomplete="off" method="post">
            <div class="mb-3">
				<label class="mb-2 text-muted" for="email">Title</label>
				@Html.TextBoxFor(x => x.Title, new { @class = "form-control", required = "required", autofocus = "autofocus" })
				<div class="invalid-feedback">
					@Html.ValidationMessageFor(x => x.Title)
				</div>
			</div>
			<div class="mb-3">
				<div class="mb-2 w-100">
					<label class="text-muted" for="password">Description</label>
				</div>
				@Html.TextBoxFor(x => x.Description, new { @class = "form-control", required = "required", autofocus = "autofocus" })
				<div class="invalid-feedback">
					@Html.ValidationMessageFor(x => x.Description)
				</div>
			</div>
			<div class="mb-3">
				<div class="mb-2 w-100">
					<label class="text-muted" for="password">Start Time</label>
				</div>
				@Html.TextBoxFor(x => x.StartTime, new { @class = "form-control", required = "required", autofocus = "autofocus" })
				<div class="invalid-feedback">
					@Html.ValidationMessageFor(x => x.StartTime)
				</div>
			</div>
			<div class="mb-3">
				<div class="mb-2 w-100">
					<label class="text-muted" for="password">End Time</label>
				</div>
				@Html.TextBoxFor(x => x.EndTime, new { @class = "form-control", required = "required", autofocus = "autofocus" })
				<div class="invalid-feedback">
					@Html.ValidationMessageFor(x => x.EndTime)
				</div>
			</div>
			<div class="d-flex align-items-center">
				<button type="submit" class="btn btn-primary ms-auto">
					Create
				</button>
			</div>
        </form>
    </div>
</div>
